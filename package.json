{
  "name": "otomi-stack",
  "version": "0.9.1",
  "description": "Opinionated Stack of Kubernetes apps and configurations",
  "scripts": {
    "lint": "tests/lint.sh",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "format": "prettier --check \"**/*.{json,md,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{json,md,yml,yaml}\"",
    "husky:lint-staged": "lint-staged",
    "husky:pre-commit": "lint-staged",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run bump && npm run husky:pre-commit",
      "post-commit": "run-if-changed",
      "post-checkout": "run-if-changed",
      "post-merge": "run-if-changed",
      "post-rewrite": "run-if-changed"
    }
  },
  "run-if-changed": {
    "package-lock.json": "npm install --prefer-offline --no-audit"
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redkubes/otomi-stack.git"
  },
  "author": "RedKubes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/redkubes/otomi-stack/issues"
  },
  "homepage": "https://github.com/redkubes/otomi-stack#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@hkdobrev/run-if-changed": "^0.3.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "standard-version": "^7.1.0"
  }
}
