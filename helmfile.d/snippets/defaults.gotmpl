helmDefaults:
  atomic: false
  wait: true
  timeout: 1200
  force: false

{{ $c := (readFile "../core.yaml" | fromYaml) }}
environments:
  {{- range $provider, $cluster := $c.clusters }}
  {{- range $stage := $cluster.stages }}
  {{- tpl (readFile "../helmfile.d/snippets/env.gotmpl") (dict "provider" $provider "stage" $stage) | nindent 2 }}
  {{- end }}
  {{- end }}