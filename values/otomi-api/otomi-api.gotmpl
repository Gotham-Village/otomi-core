{{- $v := .Environment.Values }}
{{- $o := $v.charts.otomiApi }}

image:
  tag: "0.1.3"

imagePullSecrets:
  - name: {{ $o.secret.gcr.secretName }}

git:
  repoUrl: {{ $o.git.repoUrl }}
  localPath: "/tmp/otomi-stack"
  user: {{ $o.git.user }}
  email: {{ $o.git.email }}
  password: {{ $o.git.password }}
