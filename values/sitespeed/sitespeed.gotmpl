{{- $v := .Environment.Values }}
{{- $s := $v.charts.sitespeed }}
sites: {{- $v.sites | toYaml | nindent 2 }}
schedule: {{- $s.schedule | toYaml | nindent 2 }}
pvc:
  results: {{ $s.pvc.results.size }}
  graphite: {{ $s.pvc.graphite.size }}
config:
  storageSchemas: |
    [carbon]
    pattern = ^carbon\.
    retentions = 60:1d

    [sitespeed]
    pattern = ^sitespeed_io\.
    retentions = {{ $ret }}

    [catch_them_all]
    pattern = .*
    retentions = {{ $ret }}
