{{ $v := .Environment.Values }}
{{- $host := printf "index.%s" $v.domain }}
{{ $v.index | toYaml }}
fullnameOverride: index
service:
  type: ClusterIP
clusters: {{ $v.clusters | toYaml | nindent 2 }}  
env: {{ $v.stage }}   
domain: {{ $v.domain }}
services:
  {{- range $s := $v.services }}
  {{- if and (not ($s | getOrNil "isAuthProxy")) (not ($s | getOrNil "private")) }}
  - {{ $s | toYaml | nindent 4 }}
  {{- end }}
  {{- end }}
sites: {{ $v.sites | toYaml | nindent 2 }}