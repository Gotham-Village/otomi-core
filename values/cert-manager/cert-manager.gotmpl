{{- $v := .Environment.Values }}
prometheus:
  servicemonitor:
    enabled: true

ingressShim:
  defaultIssuerName: letsencrypt-{{ $v | getOrNil "cert-manager.stage" | default "staging" }}
  defaultIssuerKind: ClusterIssuer

cainjector:
  customerLabels: {{ toYaml $v.customerLabels | nindent 4 }}
webhook:
  enabled: false
  customerLabels: {{ toYaml $v.customerLabels | nindent 4 }}

podAnnotations:
  sidecar.istio.io/inject: "false"  