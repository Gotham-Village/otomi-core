{{- $v := .Environment.Values }}
{{- $cm := index $v.charts "cert-manager" }}
prometheus:
  servicemonitor:
    enabled: true
    labels:
      release: prometheus-operator

ingressShim:
  defaultIssuerName: letsencrypt-{{ $cm.stage }}
  defaultIssuerKind: ClusterIssuer

cainjector:
  customerLabels: {{ toYaml $v.customerLabels | nindent 4 }}
webhook:
  enabled: false
  customerLabels: {{ toYaml $v.customerLabels | nindent 4 }}

podAnnotations:
  sidecar.istio.io/inject: "false"  